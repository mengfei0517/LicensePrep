{
  "manifest_version": 3,
  "name": "LicensePrep - AI Driving Coach",
  "version": "1.0.0",
  "description": "AI-powered German driving test preparation using Chrome Built-in AI",
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "permissions": [
    "storage",
    "contextMenus",
    "activeTab",
    "scripting"
  ],
  
  "host_permissions": [
    "http://localhost:5000/*",
    "https://*.licenseprep.app/*"
  ],
  
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Ask Driving Coach"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_idle"
    }
  ],
  
  "sidebar_action": {
    "default_panel": "sidebar/sidebar.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "sidebar/*"],
      "matches": ["<all_urls>"]
    }
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}

